<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF8FF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".signUp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="20dp"
        android:text="IMS Sign Up Page"
        android:textAlignment="center"
        android:textColor="#CAB926"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:labelFor="@id/firstName"
        android:text="Enter Your First Name"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:contentDescription="First name input field"
        android:hint="First Name"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:labelFor="@id/lastName"
        android:text="Enter Your Last Name"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:contentDescription="Last name input field"
        android:hint="Last Name"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        tools:ignore="Autofill,ContentDescription,HardcodedText" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:labelFor="@id/email"
        android:text="Enter Your Email Address"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:contentDescription="Email input field"
        android:hint="Email Address"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:labelFor="@id/password_toggle"
        android:text="Make Your Password"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/password_toggle"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:contentDescription="Password input field"
        android:hint="Password"
        android:importantForAutofill="no"
        android:inputType="textVisiblePassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        tools:ignore="ContentDescription,HardcodedText" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="#78E832"
        android:text="Create"

        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="#F41C1C"
        android:text="Back"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

</LinearLayout>